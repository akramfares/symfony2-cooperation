{% extends 'msqlfacoopBundle::layout.html.twig' %}

{% block title %}Liste des Contacts{% endblock %}

{% block content %}


<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Fonction</th>
            <th>Tel</th>
            <th>Fax</th>
            <th>Mail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('contacts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.prenom }}</td>
            <td>{{ entity.fonction }}</td>
            <td>{{ entity.tel }}</td>
            <td>{{ entity.fax }}</td>
            <td>{{ entity.mail }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('contacts_show', { 'id': entity.id }) }}" class="retour" style="color:white">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contacts_edit', { 'id': entity.id }) }}" class="modifier" style="color:white">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('contacts_new') }}" class="ajouter" style="color:white">
            Ajouter
        </a>
    </li>
</ul>

{% endblock %}