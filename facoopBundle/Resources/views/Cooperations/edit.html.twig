{% extends 'msqlfacoopBundle::layout.html.twig' %}

{% block title %}Editer une coopération{% endblock %}

{% block content %}


<form action="{{ path('cooperations_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="error">
	{{ form_errors(edit_form) }}
	</div>
	<table>
	    <tr>
			<td>{{ form_label(edit_form.objectifs) }}</td>
			<td>
			{{ form_errors(edit_form.objectifs) }}
			{{ form_widget(edit_form.objectifs) }}
			</td>
		</tr>
		<tr>
			<td>{{ form_label(edit_form.contacts) }}</td>
			<td>
			{{ form_errors(edit_form.contacts) }}
			{{ form_widget(edit_form.contacts) }}
			</td>
		</tr>
	</table>
	
	{{ form_rest(edit_form) }}
	
	<input type="submit" class="modifier" style="color:white"/>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('cooperations') }}" class="retour" style="color:white">
            Retour à la liste
        </a>
    </li>
    <li>
        <form action="{{ path('cooperations_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="supprimer" style="color:white">Delete</button>
        </form>
    </li>
</ul>


{% endblock %}
